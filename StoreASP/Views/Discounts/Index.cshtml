        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NazvanieSkidki)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountSum)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDiscount">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDiscount">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDiscount">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
