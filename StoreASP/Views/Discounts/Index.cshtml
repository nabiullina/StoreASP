@model IEnumerable<StoreASP.Models.Discount>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NazvanieSkidki)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountSum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
