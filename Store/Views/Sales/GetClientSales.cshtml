@model IEnumerable<Sale>


@{
    ViewData["Title"] = "Sales";
}

<h1>Client's Sales</h1>
<a asp-action="Create" asp-route-clientId="@ViewBag.cliid">Add Sale</a>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Itogo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Oplata)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductSales)
        </th>
        <th>
            Sale's Id
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Itogo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oplata)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataS)
            </td>
            <td>
                <ul>
                    @foreach (var prod in item.ProductSales)
                    {
                        <li>
                            @Html.DisplayFor(modelItem => prod.IdProductNavigation.NazvanieProduct)
                        </li>
                    }
                </ul>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSale)
            </td>
            <td>
                <a asp-action="Edit" asp-route-saleId="@item.IdSale" asp-route-cliId="@item.IdClient">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.IdSale">Delete</a>
                @* <a asp-action="Delete" asp-route-id="@item.IdClient">Delete</a> *@
            </td>
        </tr>
    }
    </tbody>
</table>