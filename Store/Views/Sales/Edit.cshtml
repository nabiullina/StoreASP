@model StoreASP.Models.Sale

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Sale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.IdSale">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSale" />
            <div class="form-group">
                <label asp-for="DataS" class="control-label"></label>
                <input asp-for="DataS" class="form-control" />
                <span asp-validation-for="DataS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Oplata" class="control-label"></label>
                <select asp-for="Oplata" class="form-control">
                    <option>Наличные</option>
                    <option>Карта</option>
                </select>
                <span asp-validation-for="Oplata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Itogo" class="control-label"></label>
                <input asp-for="Itogo" class="form-control" />
                <span asp-validation-for="Itogo" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                Products | 
                <a asp-action="Create" asp-controller="ProductSales" asp-route-saleId="@Model.IdSale">Add product</a>
                <ul>
                    @foreach (var prod in @Model.ProductSales)
                    {
                        <li>
                            <a asp-action="Details" asp-controller="Products" asp-route-id="@prod.IdProduct">
                                @Html.DisplayFor(item => prod.IdProductNavigation.NazvanieProduct);
                            </a> | 
                            @Html.DisplayFor(item => prod.IdProductNavigation.CostSales) |
                            <a asp-action="Delete" asp-controller="ProductSales" asp-route-prodId="@prod.IdProduct" asp-route-saleId="@Model.IdSale">Remove</a>
                        </li>
                    }
                </ul>
            </div>
            @* <div class="form-group"> *@
            @*     <label asp-for="IdClient" class="control-label"></label> *@
            @*     <select asp-for="IdClient" class="form-control" asp-items="ViewBag.IdClient"></select> *@
            @*     <span asp-validation-for="IdClient" class="text-danger"></span> *@
            @* </div> *@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
